@import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@300;400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --blush-50: #fdf8f8;
  --blush-100: #fcf0f0;
  --blush-200: #f9e1e1;
  --blush-300: #f5caca;
  --blush-400: #efaaaa;
  --blush-500: #e68a8a;
  --blush-600: #d66b6b;
  --blush-700: #c55454;
  --blush-800: #a34646;
  --blush-900: #863d3d;
  --blush-950: #481c1c;
  
  --gold-50: #fdfbf7;
  --gold-100: #faf6ed;
  --gold-200: #f3ebd2;
  --gold-300: #ebdcb4;
  --gold-400: #e0c788;
  --gold-500: #d4a574;
  --gold-600: #c08a5a;
  --gold-700: #a0704b;
  --gold-800: #825a41;
  --gold-900: #6b4b37;
  --gold-950: #39261c;
  
  --rose-50: #faf7f8;
  --rose-100: #f5eef1;
  --rose-200: #ece0e5;
  --rose-300: #ddc7d1;
  --rose-400: #c8a4b4;
  --rose-500: #b38299;
  --rose-600: #9c6580;
  --rose-700: #8b4b6b;
  --rose-800: #74405a;
  --rose-900: #61384d;
  --rose-950: #371d2a;
  
  --charcoal-50: #f6f6f6;
  --charcoal-100: #e7e7e7;
  --charcoal-200: #d1d1d1;
  --charcoal-300: #b0b0b0;
  --charcoal-400: #888888;
  --charcoal-500: #6d6d6d;
  --charcoal-600: #5d5d5d;
  --charcoal-700: #4f4f4f;
  --charcoal-800: #454545;
  --charcoal-900: #3d3d3d;
  --charcoal-950: #2c2c2c;
}

/* Base styles */
body {
  font-family: 'Inter', sans-serif;
  line-height: 1.6;
  color: var(--charcoal-950);
  background-color: #ffffff;
}

/* Typography */
.heading-script {
  font-family: 'Dancing Script', cursive;
  font-weight: 600;
}

.heading-elegant {
  font-family: 'Playfair Display', serif;
  font-weight: 600;
  line-height: 1.2;
}

/* Button Components */
.btn-primary {
  @apply bg-gold-500 text-white px-8 py-3 rounded-full font-medium transition-all duration-300 hover:bg-gold-600 hover:shadow-lg transform hover:-translate-y-1;
}

.btn-secondary {
  @apply bg-rose-700 text-white px-8 py-3 rounded-full font-medium transition-all duration-300 hover:bg-rose-800 hover:shadow-lg transform hover:-translate-y-1;
}

.btn-outline {
  @apply border-2 border-gold-500 text-gold-700 px-8 py-3 rounded-full font-medium transition-all duration-300 hover:bg-gold-500 hover:text-white hover:shadow-lg transform hover:-translate-y-1;
}

/* Card Components */
.service-card {
  @apply bg-white rounded-2xl shadow-lg p-8 transition-all duration-300 hover:shadow-xl hover:-translate-y-2;
  background: linear-gradient(135deg, #ffffff 0%, var(--blush-50) 100%);
}

.portfolio-card {
  @apply relative overflow-hidden rounded-2xl shadow-lg transition-all duration-300 hover:shadow-2xl;
}

.portfolio-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(212, 165, 116, 0.8) 0%, rgba(139, 75, 107, 0.8) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.portfolio-card:hover::after {
  opacity: 1;
}

/* Testimonial Card */
.testimonial-card {
  @apply bg-white rounded-2xl shadow-lg p-8 mx-4 transition-all duration-300;
  background: linear-gradient(135deg, #ffffff 0%, var(--blush-50) 100%);
}

/* Navigation */
.nav-link {
  @apply text-charcoal-700 font-medium transition-colors duration-300 hover:text-rose-700 relative;
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0;
  height: 2px;
  background-color: var(--rose-700);
  transition: width 0.3s ease;
}

.nav-link:hover::after {
  width: 100%;
}

/* Hero Section */
.hero-overlay {
  background: linear-gradient(135deg, rgba(44, 44, 44, 0.6) 0%, rgba(139, 75, 107, 0.4) 100%);
}

/* Form Styles */
.form-input {
  @apply w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-gold-500 focus:ring-2 focus:ring-gold-200 transition-all duration-300;
}

.form-textarea {
  @apply w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-gold-500 focus:ring-2 focus:ring-gold-200 transition-all duration-300 min-h-32 resize-y;
}

/* Section Backgrounds */
.section-blush {
  background: linear-gradient(135deg, var(--blush-50) 0%, #ffffff 100%);
}

.section-gold {
  background: linear-gradient(135deg, var(--gold-50) 0%, #ffffff 100%);
}

/* Decorative Elements */
.decorative-line {
  position: relative;
}

.decorative-line::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent 0%, var(--gold-400) 50%, transparent 100%);
}

/* Gallery Grid */
.gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

/* Price Card */
.price-card {
  @apply bg-white rounded-2xl shadow-lg p-8 transition-all duration-300 hover:shadow-xl hover:-translate-y-2;
  background: linear-gradient(135deg, #ffffff 0%, var(--gold-50) 100%);
}

.price-card.featured {
  @apply ring-4 ring-gold-400;
  background: linear-gradient(135deg, var(--gold-50) 0%, var(--blush-50) 100%);
}

/* Animations */
.animate-fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

.animate-slide-up {
  animation: slideUp 0.6s ease-out;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .gallery-grid {
    grid-template-columns: 1fr;
  }
  
  .btn-primary,
  .btn-secondary,
  .btn-outline {
    @apply px-6 py-2 text-sm;
  }
  
  .service-card,
  .testimonial-card,
  .price-card {
    @apply p-6;
  }
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}

/* Selection colors */
::selection {
  background-color: var(--gold-200);
  color: var(--charcoal-950);
}

::-moz-selection {
  background-color: var(--gold-200);
  color: var(--charcoal-950);
}